{
  "manifest_version": 3,
  "name": "AGATE Prospector",
  "version": "1.7.0",
  "description": "Capturez les prospects LinkedIn et envoyez-les dans votre Notion CRM en 1 clic.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel",
    "tabs",
    "identity"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://api.notion.com/*",
    "https://api.lusha.com/*",
    "https://graph.microsoft.com/*",
    "https://login.microsoftonline.com/*",
    "https://api.openai.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["shared-config.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Ouvrir AGATE Prospector"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}